---
import { WEBSITE_TITLE, WEBSITE_URL, COPYRIGHT } from "../utils/variables";
import { ClientRouter } from "astro:transitions";
import Header from "../components/header/Header.astro";
import Footer from "../components/footer/Footer.astro";
import FixedLinks from "../components/FixedLinks.astro";
import { TITLE, SUBTITLE } from "../pages/about.astro";

import studioHeaderImage from "../assets/Revati-Studio_header_orange.png";

interface Props {
  title: string;
}

const { title } = Astro.props;

const absThumbnailPath = WEBSITE_URL + studioHeaderImage.src;
const fullTitle = `${WEBSITE_TITLE} | ${title}`;
const DESCRIPTION = "あらゆるクリエイティブをワンストップで。";
const canonicalUrl = WEBSITE_URL + Astro.url.pathname;

const specialGothicTexts = [...new Set(`${TITLE}${SUBTITLE}`.split(""))].join(
  "",
);
